<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="Theme.FiBo" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <!--        <item name="colorPrimary">#D4E3FF</item>-->
        <item name="colorPrimary">@color/hint_text_blue</item>
        <!--        <item name="colorPrimaryVariant">#1E92EA</item>-->
        <item name="colorPrimaryVariant">@color/light_primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <!--        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>-->
        <!-- Customize your theme here. -->
    </style>

    <style name="Style.FiBo.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Style.FiBo.Dropdown" parent="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxBackgroundColor">@color/application_background</item>
    </style>

    <style name="Style.FiBo.FAB.Primary" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="tint">?attr/colorOnPrimary</item>
    </style>

    <style name="Style.FiBo.CardView.Filled" parent="Widget.Material3.CardView.Outlined">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="strokeColor">@color/field_stroke_color</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="Theme.FiBo.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.FiBo.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.FiBo.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.FiBo.TextView" parent="android:Widget.TextView">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="Theme.FiBo.TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextColor">?attr/colorPrimary</item>
        <item name="tabIndicatorColor">?attr/colorPrimary</item>
    </style>

    <style name="Theme.FiBo.Button.Border" parent="@style/Widget.AppCompat.ImageButton">
        <item name="strokeColor">?attr/colorPrimary</item>
        <item name="strokeWidth">1.5dp</item>
        <item name="cornerRadius">6dp</item>
    </style>

</resources>